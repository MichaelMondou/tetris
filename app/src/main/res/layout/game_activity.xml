<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iut.michael.mondou.tetris.GameActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/splashcreen"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_alignTop="@+id/pauseButton"/>

        <TextView
            android:id="@+id/scoreView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score : 0"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/pause"
            android:text="Pause"
            android:layout_alignBottom="@+id/scoreView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="125dp"
        android:background="@android:color/holo_blue_dark"
        tools:layout_editor_absoluteY="133dp"
        tools:layout_editor_absoluteX="8dp">

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:layout_marginTop="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/resetLayout">

            <GridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:horizontalSpacing="1px"
                android:numColumns="10"
                android:verticalSpacing="1px"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/resetLayout"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="60dp"
            android:background="#FF0000"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:layout_alignTop="@+id/relativeLayout4"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/resetTextView"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="0.09"
                android:text="Partie terminÃ©e"
                android:textSize="24sp"
                android:visibility="invisible" />
        </LinearLayout>

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/resetLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="Recommencer"
            android:visibility="invisible" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>